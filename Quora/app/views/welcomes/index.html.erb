<%= stylesheet_link_tag "list" %>
<%= javascript_include_tag "jquery_init.js" %>
<ul>
  <h1>Quora</h1> 
  <li><%=link_to 'Home',questions_path, class: "fa fa-home" %></li>
  <li><%=link_to  'add question',new_question_path, class: "fa fa-plus"%></li>
  <li><%=link_to  'add topic',new_topic_path,class: "fa fa-plus-circle" %></li>
  <li>
    <% if current_user.admin? %>
      <%=link_to 'Admin', welcomes_index_path, class: "fa fa-user" %>
    <%else%> 
      <%=link_to 'user', welcomes_index_path, class: "fa fa-user-plus"%>
    <%end%>     
  </li>
  <li><%= link_to 'join topic',topics_path, class: "fa fa-check-circle"%></li>
  <li><%= link_to "Sign out", destroy_user_session_path, class: "fa fa-sign-out",:method => :delete %></li>
  <li>
    <% if current_user.avatar.attached? %>
      <image src="<%= (url_for(current_user.avatar))%>" class= "img" alt="<%=current_user.name%>" >
    <%else%>
      <p><%=current_user.name%></p>
    <% end %>
  </li>
</ul>

 	<br>
	<br>
    <br>
    <p align="right">
        <%if !current_user.admin? %>
            <h3 align="right">
                <div id="new-employ">
                    <%=link_to_if(current_user.employment.blank?,'Employment detail',new_employment_path, remote: true) %>
                </div>
            </h3>
            <% if !current_user.employment.blank? %>
                <%= render 'employments/detail' %>
            <%end%>
        <%end%>
    </p>
    <br>
    <p align="left">
      <h2><%= link_to 'view question',view_questions_path %></h2>
      <h2><%= link_to 'edit info',edit_user_registration_path(current_user.id)  %></h2>
      <h2><%= link_to 'topic',topics_path %></h2>
      <h2><%= link_to 'bookmark Question',bookmarks_user_path(current_user.id) %></h2>
      <h2><%=link_to 'view users', users_path, class:"fa fa-user" %></h2>
    </p>
  	<p align="right">
      <%if !current_user.admin? %>
        <h3 align="right">
          <div id="new-education">
           <%= link_to_if(current_user.education.blank?,'Education detail',new_education_path, remote: true) %>
          </div>
        </h3>
        <% if !current_user.education.blank? %>
          <%= render 'educations/detail' %>
        <%end%>
      <%end%>
    </p>
