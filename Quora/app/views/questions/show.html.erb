<%= javascript_include_tag "jquery_init" %>
<%= stylesheet_link_tag "list" %>
<%= stylesheet_link_tag "design" %>
<%= stylesheet_link_tag "view" %>
<ul>
  <h1>Quora</h1>
  <li><%=link_to 'Home',questions_path, class: "fa fa-home" %></li>
  <li><%=link_to  'add question',new_question_path, class: "fa fa-plus"%></li>
  <li><%=link_to  'add topic',new_topic_path,class: "fa fa-plus-circle" %></li>
  <li><%=link_to 'user', welcomes_index_path,class: "fa fa-user-plus"%>
  <li><%= link_to 'join topic',topics_path,class: "fa fa-check-circle"%></li>
  <li><%= link_to "Sign out", destroy_user_session_path,class: "fa fa-sign-out",:method => :delete %></li>
  <li>
    <% if current_user.avatar.attached? %>
      <image src="<%= (url_for(current_user.avatar))%>" class= "img" alt="<%=current_user.name%>" >
    <%else%>
      <p><%=current_user.name%></p>
    <% end %>
  </li>
</ul>
<div class="view">
  <h1>Add answer</h1>
  <table align = "center">
  	<tr>Added topic by.<%= @question.topic.topic_name %></tr><br><br>
  	<tr><%= @question.author_name %></tr><br>
  	<tr><h2><%= @question.data %></h2><tr><br>
  	<tr><%= @question.question_link %></tr><br>
  	<tr><%= @question.created_at %></tr><br>
  	<tr>
      <%= link_to 'back', :back %></tr><br>
  	<tr>
      <% if current_user.questions.where(:id=>@question).present? %>
        <%= link_to 'edit',edit_question_url(@question), class: "fa fa-pencil" %>
      <%end%>
    </tr>
    <br>
  	<tr>
      <% if current_user.questions.where(:id=>@question).present? %>
        <%= link_to 'Destroy', question_path(@question), class: "fa fa-trash",
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
      <%end%>
    </tr>
    <tr>
      <div id="answer">
        <%= link_to 'add answer',new_answer_path(:question_id => @question), remote: true, class:"fa fa-pencil-square-o"%>
      </div>
    </tr>
    <div class="view">
    	<tr><%= render 'answers/answer' %></tr>
    </div>
  </table>
</div>
