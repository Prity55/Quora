<%= javascript_include_tag "jquery_init" %>
<%= javascript_include_tag "answers.js" %>
<%= stylesheet_link_tag "list" %>
<ul>
  <h1>Quora</h1>
  <li><%=link_to 'Home',questions_path, class: "fa fa-home" %></li>
  <li><%=link_to  'add question',new_question_path, class: "fa fa-plus"%></li>
  <li><%=link_to  'add topic',new_topic_path,class: "fa fa-plus-circle" %></li>
  <li><%=link_to 'user', welcomes_index_path,class: "fa fa-user-plus"%>
  <li><%= link_to 'join topic',topics_path,class: "fa fa-check-circle"%></li>
  <li><%= link_to "Sign out", destroy_user_session_path,class: "fa fa-sign-out",:method => :delete %></li>
</ul>
<%= form_for ([@question,@answer]),:html => {:id => "reg"} do |f| %>
<% if @answer.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@answer.errors.count,"error") %>prohibited from being saved
				</h2>
				<ul>
        		<% @answer.errors.full_messages.each do |msg| %>
          		<li><%= msg %></li>
          		<%end%>
        <% end %>
      </ul>
    </div>

<h1 align="center">Edit your answer</h1>
<table align="center">
  <tr>
   <td><%= f.label :Answer %></td>
   <td></td>
   <td><%= f.text_field :data, id:"data", placeholder: "Add your answer"%></td>
   <td><%= link_to "back", answer_path(@answer) %>
   <td><%= f.submit "edit" %>
  </tr>
 </table>
 <% end %>