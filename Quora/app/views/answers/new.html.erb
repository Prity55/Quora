<%= form_for @answer do |form| %>
	
	<%= form.hidden_field :question_id, :value => params[:question] %>
	<center><h1><b>Add answer detail<b></h1></center>
		<% if @answer.errors.any? %>
			<div id="error_explanation">
				<h2>
					<%= pluralize(@answer.errors.count,"error") %>prohibited from being saved
				</h2>
				<ul>
        		<% @answer.errors.full_messages.each do |msg| %>
          		<li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
			
	<%= render 'answers/show'%>